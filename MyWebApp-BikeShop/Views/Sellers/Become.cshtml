@model BecomeSellerFormModel

@{ 
    ViewData["Title"] = "Become Seller";
}

<div class="container">
    <div class="row">
        <div class="offset-md-2 col-md-8 col-sm-12">
            <h2 class="heading-margin text-center">@ViewData["Title"]</h2>

            <form method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="John, Smith, etc...">
                    <span asp-validation-for="Name" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="+359...">
                    <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
                </div>

                <input class="btn btn-primary float-right" type="submit" value="Add" />

            </form>
        </div>
    </div>
</div>